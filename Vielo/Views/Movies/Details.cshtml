@model Vielo.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate</li>
    <li>Date Added: @Model.DateAdded.Day, @Model.DateAdded.Date, @Model.DateAdded.Year</li>
    <li>Number in Stocks: @Model.NumberInStock</li>
</ul>

